<p id="notice"><%= notice %></p>

<h1>Memberships</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>User</th>
      <th>Group</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= membership.user.first_name %> <%= membership.user.last_name %></td>
        <td><%= membership.group.name %></td>
        <td><%= membership.role.name %></td>
        <td><%= link_to 'Show', membership, class: 'btn btn-outline-primary' %></td>
        <td><%= link_to 'Edit', edit_membership_path(membership), class: 'btn btn-outline-primary' %></td>
        <td><%= link_to 'Destroy', membership, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Membership', new_membership_path, class: 'btn btn-outline-primary' %>
