<p id="notice"><%= notice %></p>

<h1>Roles</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= link_to 'Show', role, class: 'btn btn-outline-primary' %></td>
        <td><%= link_to 'Edit', edit_role_path(role), class: 'btn btn-outline-primary' %></td>
        <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Role', new_role_path, class: 'btn btn-outline-primary'%>
